@=
(fun (str/eq a b)
  (while (and (u8 a) (== (u8 a) (u8 b)))
    (set a (+ a 1))
    (set b (+ b 1)))
  (== (u8 a) (u8 b)))

(fun (str/skip-whitespace ptr)
  (while (or (== (u8 ptr) ch/spc) (== (u8 ptr) ch/nl))
    (set ptr (+ ptr 1)))
  ptr)

(fun (str/skip-non-whitespace ptr)
  (while (and (u8 ptr) (!= (u8 ptr) ch/spc) (!= (u8 ptr) ch/nl))
    (set ptr (+ ptr 1)))
  ptr)

(fun (str/cpy dest str)
  (while (u8 str)
    (set (u8 dest) (u8 str))
    (set str (+ str 1))
    (set dest (+ dest 1)))
  (set (u8 dest) 0))

(fun (str/len str)
  (var n 0)
  (while (u8 str)
    (set n (+ n 1))
    (set str (+ str 1)))
  n)

(fun (str/cmp a b)
  (while (and (u8 a) (== (u8 a) (u8 b)))
    (set a (+ a 1))
    (set b (+ b 1)))
  (- (u8 b) (u8 a)))

(fun (str/dup str)
  (var dest (mem/alloc (+ (str/len str) 1)))
  (str/cpy dest str)
  dest)
