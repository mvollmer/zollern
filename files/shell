(fun (shell/readline buf len)
  (con/out "$ ")
  (con/in buf len)
  (con/out buf)
  (con/out "\n"))

(fun (shell/parse-args argv max-argc line)
  (var argc 0)
  (set line (str/skip-whitespace line))
  (while (and (u8 line) (< argc max-argc))
   (set (u64 argv argc) line)
   (set argc (+ argc 1))
   (set line (str/skip-non-whitespace line))
   (if (u8 line)
       (begin
        (set (u8 line) 0)
        (set line (str/skip-whitespace (+ line 1))))))
  argc)

(fun (shell/con-out-with-nl ptr)
  (con/out ptr)
  (con/out "\n"))

(fun (shell/cmd-ed argc argv)
  (if (== argc 2)
      (begin
       (mem edbuf ed/textbuf)
       (set (ed/textbuf-buf edbuf) (sys/page-get))
       (set (ed/textbuf-max edbuf) (* 16 1024))
       (set (ed/textbuf-len edbuf) 0)
       (mem fbuf fs/rbuf)
       (if (fs/open fbuf (u64 argv 1))
           (begin
            (if (fs/read fbuf)
                (begin
                 (mem/cpy (ed/textbuf-buf edbuf) (fs/rbuf-start fbuf) (fs/rbuf-size fbuf))
                 (set (ed/textbuf-len edbuf) (fs/rbuf-size fbuf))))
            (fs/close fbuf)))
       (ed/ed edbuf 0 0 0 1024 768))
   (con/out "usage: ed FILE\n")))

(fun (shell/main)
  (mem line 256)
  (mem file ed/textbuf)
  (mem argv (* 8 16))
  (set (ed/textbuf-buf file) (sys/page-get))
  (set (ed/textbuf-max file) (* 16 1024))
  (set (ed/textbuf-len file) 0)
  (while 1
   (shell/readline line 256)
   (var argc (shell/parse-args argv 16 line))
   (var arg1 (u64 argv))
   (if (str/eq arg1 "quit")
       (sys/call 60 0)
    (if (str/eq arg1 "edit")
        (ed/ed file 0 0 0 1024 768)
     (if (str/eq arg1 "run")
         (if (var book (sys/compile "user"
                                    (ed/textbuf-buf file) (+ (ed/textbuf-buf file) (ed/textbuf-len file))
                                    con/out 0))
             (begin
              (if (var main (sys/book-search-fun book "main"))
                  (main)
               (con/out "no user/main function\n"))
              (sys/book-free book))
          (con/out "compilation failed\n"))
      (if (str/eq arg1 "list")
          (fs/list shell/con-out-with-nl)
       (if (str/eq arg1 "ed")
           (shell/cmd-ed argc argv)
        (con/out "?\n"))))))))
