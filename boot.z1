(def boot/MAX 20)

(fun (boot/print-int n)
  (mem buf 40)
  (var end (+ buf 40))
  (var ptr end)
  (set ptr (- ptr 1))
  (set (u8 ptr) 10)
  (label loop)
  (set ptr (- ptr 1))
  (set (u8 ptr) (+ (% n 10) 48))
  (set n (/ n 10))
  (if n (goto loop))
  (sys/call 1 1 ptr (- end ptr)))

(fun (boot/fac n)
  (if (< n 2)
      n
      (* n (boot/fac (- n 1)))))

(fun (boot/main)
  (mem ctxt 128)
  (set context ctxt)
  (var n 1)
  (while (< n boot/MAX)
    (boot/print-int (boot/fac n))
    (set n (+ n 1))))
