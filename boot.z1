(fun (boot/print-int n)
  (mem buf 40)
  (var end (+ buf 40))
  (var ptr end)
  (set ptr (- ptr 1))
  (set (u8 ptr) 10)
  (label loop)
  (set ptr (- ptr 1))
  (set (u8 ptr) (+ (% n 10) 48))
  (set n (/ n 10))
  (if n (goto loop))
  (sys/call 1 1 ptr (- end ptr)))

(fun (boot/fac n)
  (if (< n 2)
      n
      (* n (boot/fac (- n 1)))))

(fun (boot/main)
  (mem ctxt gfx/context)
  (mem gfx gfx/gfx)
  (set context ctxt)
  (set (gfx/ctxt-gfx context) gfx)
  (gfx/init)
  (gfx/rect 0 0 1024 768 (gfx/color 250 250 230))
  (gfx/show)

  (var n 1)
  (while (< n 20)
   (boot/print-int (boot/fac n))
   (set n (+ n 1)))

  (gfx/wait))
