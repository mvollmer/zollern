(fun (boot/print-int n)
  (mem buf 40)
  (var end (+ buf 40))
  (var ptr end)
  (set ptr (- ptr 1))
  (set (u8 ptr) 0)
  (label loop)
  (set ptr (- ptr 1))
  (set (u8 ptr) (+ (% n 10) 48))
  (set n (/ n 10))
  (if n (goto loop))
  (con/out ptr))

(fun (boot/fac n)
  (if (< n 2)
      n
      (* n (boot/fac (- n 1)))))

(fun (boot/main)
  (mem/init)
  (gfx/init)
  (con/init)

  (var n 1)
  (while (< n 21)
   (boot/print-int n)
   (con/out ": ")
   (boot/print-int (boot/fac n))
   (con/nl)
   (set n (+ n 1)))

  (gfx/invert-rect 10 500 100 100)
  (gfx/wait))
